<div class="pt-10 bg-[#f2f0f1]">
  <div class="container">
    <div class="flex items-center">
      <div class="w-1/2 pr-20">
        <h2 class="text-[64px] leading-[64px] text-black mb-8">FIND CLOTHES THAT MATCHES YOUR STYLE</h2>
        <div class="max-w-lg">
          <div class="mb-6">
            Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality
            and cater to your sense of style.
          </div>
          <a class="rounded-full px-12 py-2 text-white bg-black inline-block">Shop Now</a>
        </div>

        <div class="flex mt-8">
          {% for i in (1..3) %}
            <div class="w-1/3 ">
              <div class="text-[40px] font-bold">200+</div>
              International Brands
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="w-1/2 flex justify-end">
        <div class="relative -right-20"><img src="{{ 'brothers.jpg'|asset_url }}" alt=""></div>
      </div>
    </div>
  </div>
</div>

{% assign images = 'company.png, company1.png, company2.png, company3.png, company4.png' | split: ', ' %}

<div class="bg-black py-10">
  <div class="container">
    <div class="flex ">
      {% for img in images %}
        <div class="flex-1">
          <img src="{{ img | asset_url }}" alt="">
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% assign products = 'product1.png, product2.png, product3.png, product4.png' | split: ', ' %}
